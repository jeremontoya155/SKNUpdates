<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Sistema de Inventario</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container">
    <div class="page-header">
      <h1>üè¢ <%= empresa.nombre %></h1>
      <div>
        <form action="/empresas/<%= empresa.id %>/toggle" method="POST" style="display: inline;">
          <button type="submit" class="btn <%= empresa.activo ? 'btn-warning' : 'btn-success' %>">
            <%= empresa.activo ? '‚ùå Desactivar' : '‚úÖ Activar' %>
          </button>
        </form>
        <a href="/empresas" class="btn btn-secondary">‚¨ÖÔ∏è Volver</a>
      </div>
    </div>

    <div class="detail-card">
      <div class="detail-header">
        <h2>Informaci√≥n de la Empresa</h2>
        <span class="badge <%= empresa.activo ? 'badge-success' : 'badge-danger' %>">
          <%= empresa.activo ? '‚úÖ Activa' : '‚ùå Inactiva' %>
        </span>
      </div>

      <div class="detail-content">
        <div class="detail-row">
          <div class="detail-item">
            <label>üè¢ Nombre</label>
            <p><strong><%= empresa.nombre %></strong></p>
          </div>
          <div class="detail-item">
            <label>ÔøΩ Fecha de Registro</label>
            <p><%= new Date(empresa.fecha_creacion).toLocaleDateString('es-AR') %></p>
          </div>
        </div>

        <div class="detail-row">
          <div class="detail-item">
            <label>üìß Email</label>
            <p><%= empresa.email || 'N/A' %></p>
          </div>
          <div class="detail-item">
            <label>üìû Tel√©fono</label>
            <p><%= empresa.telefono || 'N/A' %></p>
          </div>
        </div>

        <div class="detail-row">
          <div class="detail-item full-width">
            <label>üìç Direcci√≥n</label>
            <p><%= empresa.direccion || 'N/A' %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Estad√≠sticas -->
    <div class="stats-grid" style="margin-top: 2rem;">
      <div class="stat-card">
        <span class="stat-value"><%= stats.total_usuarios %></span>
        <span class="stat-label">üë• Usuarios</span>
      </div>
      <div class="stat-card">
        <span class="stat-value"><%= stats.total_materiales %></span>
        <span class="stat-label">üì¶ Materiales</span>
      </div>
      <div class="stat-card">
        <span class="stat-value"><%= stats.total_tickets %></span>
        <span class="stat-label">üé´ Tickets</span>
        <% if (stats.tickets_pendientes > 0) { %>
          <small style="color: var(--danger-color);"><%= stats.tickets_pendientes %> pendientes</small>
        <% } %>
      </div>
      <div class="stat-card">
        <span class="stat-value"><%= stats.total_servidores %></span>
        <span class="stat-label">ÔøΩ Servidores</span>
      </div>
      <div class="stat-card">
        <span class="stat-value"><%= impresoras.length %></span>
        <span class="stat-label">üñ®Ô∏è Impresoras</span>
      </div>
      <div class="stat-card">
        <span class="stat-value"><%= stats.total_visitas %></span>
        <span class="stat-label">ÔøΩ Visitas</span>
      </div>
    </div>

    <!-- Pesta√±as de contenido -->
    <div style="margin-top: 2rem;">
      <div class="tabs" style="display: flex; gap: 0.5rem; margin-bottom: 1rem; border-bottom: 2px solid var(--border-color);">
        <button class="tab-btn active" onclick="showTab('usuarios')">üë• Usuarios (<%= usuarios.length %>)</button>
        <button class="tab-btn" onclick="showTab('materiales')">üì¶ Inventario (<%= materiales.length %>)</button>
        <button class="tab-btn" onclick="showTab('servidores')">üñß Servidores (<%= servidores.length %>)</button>
        <button class="tab-btn" onclick="showTab('impresoras')">ÔøΩÔ∏è Impresoras (<%= impresoras.length %>)</button>
        <button class="tab-btn" onclick="showTab('tickets')">üé´ Tickets (<%= tickets.length %>)</button>
        <button class="tab-btn" onclick="showTab('visitas')">üöó Visitas (<%= visitas.length %>)</button>
      </div>

      <!-- Tab Usuarios -->
      <div id="tab-usuarios" class="tab-content active">
      <!-- Tab Usuarios -->
      <div id="tab-usuarios" class="tab-content active">
        <div class="detail-card">
          <div class="detail-header">
            <h3>üë• Usuarios</h3>
          </div>
          <div class="detail-content">
            <% if (usuarios.length === 0) { %>
              <p style="text-align: center; color: #666;">No hay usuarios registrados</p>
            <% } else { %>
              <div class="table-container">
                <table>
                  <thead>
                    <tr>
                      <th>Nombre</th>
                      <th>Email</th>
                      <th>Rol</th>
                      <th>Estado</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% usuarios.forEach(u => { %>
                      <tr>
                        <td><%= u.nombre %></td>
                        <td><%= u.email %></td>
                        <td><span class="badge badge-primary"><%= u.rol %></span></td>
                        <td>
                          <span class="badge <%= u.activo ? 'badge-success' : 'badge-danger' %>">
                            <%= u.activo ? '‚úÖ Activo' : '‚ùå Inactivo' %>
                          </span>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Tab Materiales -->
      <div id="tab-materiales" class="tab-content">
        <div class="detail-card">
          <div class="detail-header">
            <h3>üì¶ Inventario</h3>
            <a href="/inventario?empresa=<%= empresa.id %>" class="btn btn-sm btn-primary">Ver todos</a>
          </div>
          <div class="detail-content">
            <% if (materiales.length === 0) { %>
              <p style="text-align: center; color: #666;">No hay materiales registrados</p>
            <% } else { %>
              <div class="table-container">
                <table>
                  <thead>
                    <tr>
                      <th>Nombre</th>
                      <th>Categor√≠a</th>
                      <th>Marca</th>
                      <th>Modelo</th>
                      <th>Stock</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% materiales.forEach(m => { %>
                      <tr>
                        <td><%= m.nombre %></td>
                        <td><span class="badge"><%= m.categoria_nombre %></span></td>
                        <td><%= m.marca || 'N/A' %></td>
                        <td><%= m.modelo || 'N/A' %></td>
                        <td><code><%= m.stock_actual %></code></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <% if (materiales.length >= 50) { %>
                <p style="text-align: center; margin-top: 1rem;">
                  <a href="/inventario?empresa=<%= empresa.id %>">Ver todos los materiales ‚Üí</a>
                </p>
              <% } %>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Tab Servidores -->
      <div id="tab-servidores" class="tab-content">
        <div class="detail-card">
          <div class="detail-header">
            <h3>üñß Servidores</h3>
            <a href="/servidores?empresa=<%= empresa.id %>" class="btn btn-sm btn-primary">Ver todos</a>
          </div>
          <div class="detail-content">
            <% if (servidores.length === 0) { %>
              <p style="text-align: center; color: #666;">No hay servidores registrados</p>
            <% } else { %>
              <div class="table-container">
                <table>
                  <thead>
                    <tr>
                      <th>Tipo</th>
                      <th>Nombre</th>
                      <th>IP Externa</th>
                      <th>IP Interna</th>
                      <th>Estado</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% servidores.forEach(s => { %>
                      <tr>
                        <td><span class="badge badge-primary"><%= s.tipo || 'N/A' %></span></td>
                        <td><strong><%= s.nombre %></strong></td>
                        <td><code><%= s.ip_externa || 'N/A' %></code></td>
                        <td><code><%= s.ip_interna %></code></td>
                        <td>
                          <span class="badge <%= s.activo ? 'badge-success' : 'badge-danger' %>">
                            <%= s.activo ? '‚úÖ' : '‚ùå' %>
                          </span>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Tab Impresoras -->
      <div id="tab-impresoras" class="tab-content">
        <div class="detail-card">
          <div class="detail-header">
            <h3>üñ®Ô∏è Impresoras</h3>
          </div>
          <div class="detail-content">
            <% if (impresoras.length === 0) { %>
              <p style="text-align: center; color: #666;">No hay impresoras registradas</p>
            <% } else { %>
              <div class="table-container">
                <table>
                  <thead>
                    <tr>
                      <th>Nombre</th>
                      <th>Marca</th>
                      <th>Modelo</th>
                      <th>Estado</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% impresoras.forEach(i => { %>
                      <tr>
                        <td><%= i.nombre %></td>
                        <td><%= i.marca || 'N/A' %></td>
                        <td><%= i.modelo || 'N/A' %></td>
                        <td>
                          <span class="badge <%= i.activo ? 'badge-success' : 'badge-danger' %>">
                            <%= i.activo ? '‚úÖ' : '‚ùå' %>
                          </span>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Tab Tickets -->
      <div id="tab-tickets" class="tab-content">
        <div class="detail-card">
          <div class="detail-header">
            <h3>üé´ Tickets</h3>
          </div>
          <div class="detail-content">
            <% if (tickets.length === 0) { %>
              <p style="text-align: center; color: #666;">No hay tickets registrados</p>
            <% } else { %>
              <div class="table-container">
                <table>
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>T√≠tulo</th>
                      <th>Solicitante</th>
                      <th>Estado</th>
                      <th>Prioridad</th>
                      <th>Fecha</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% tickets.forEach(t => { %>
                      <tr>
                        <td><strong>#<%= t.id %></strong></td>
                        <td><%= t.titulo %></td>
                        <td><%= t.solicitante_nombre %></td>
                        <td>
                          <span class="badge <%= t.estado === 'pendiente' ? 'badge-warning' : (t.estado === 'finalizado' ? 'badge-success' : 'badge-primary') %>">
                            <%= t.estado %>
                          </span>
                        </td>
                        <td>
                          <span class="badge <%= t.prioridad === 'urgente' ? 'badge-danger' : (t.prioridad === 'alta' ? 'badge-warning' : 'badge') %>">
                            <%= t.prioridad %>
                          </span>
                        </td>
                        <td><%= new Date(t.fecha_creacion).toLocaleDateString('es-AR') %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Tab Visitas -->
      <div id="tab-visitas" class="tab-content">
        <div class="detail-card">
          <div class="detail-header">
            <h3>üöó Visitas</h3>
          </div>
          <div class="detail-content">
            <% if (visitas.length === 0) { %>
              <p style="text-align: center; color: #666;">No hay visitas registradas</p>
            <% } else { %>
              <div class="table-container">
                <table>
                  <thead>
                    <tr>
                      <th>Fecha</th>
                      <th>Visitante</th>
                      <th>Empresa</th>
                      <th>Motivo</th>
                      <th>Estado</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% visitas.forEach(v => { %>
                      <tr>
                        <td><%= new Date(v.fecha_visita).toLocaleDateString('es-AR') %></td>
                        <td><%= v.visitante_nombre %></td>
                        <td><%= v.visitante_empresa || 'N/A' %></td>
                        <td><%= v.motivo_visita %></td>
                        <td>
                          <span class="badge badge-<%= v.estado %>"><%= v.estado %></span>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>

  <script>
    function showTab(tabName) {
      // Ocultar todos los contenidos
      document.querySelectorAll('.tab-content').forEach(tab => {
        tab.classList.remove('active');
        tab.style.display = 'none';
      });

      // Remover active de todos los botones
      document.querySelectorAll('.tab-btn').forEach(btn => {
        btn.classList.remove('active');
      });

      // Mostrar el tab seleccionado
      const selectedTab = document.getElementById('tab-' + tabName);
      if (selectedTab) {
        selectedTab.classList.add('active');
        selectedTab.style.display = 'block';
      }

      // Activar el bot√≥n correspondiente
      event.target.classList.add('active');
    }

    // Estilo inicial
    document.querySelectorAll('.tab-content').forEach((tab, index) => {
      if (index !== 0) {
        tab.style.display = 'none';
      }
    });
  </script>

  <style>
    .tabs {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 1rem;
      border-bottom: 2px solid var(--border-color);
      overflow-x: auto;
    }

    .tab-btn {
      padding: 0.75rem 1.5rem;
      background: transparent;
      border: none;
      border-bottom: 3px solid transparent;
      cursor: pointer;
      font-size: 1rem;
      white-space: nowrap;
      transition: all 0.3s;
    }

    .tab-btn:hover {
      background-color: rgba(232, 93, 4, 0.1);
    }

    .tab-btn.active {
      border-bottom-color: var(--primary-color);
      color: var(--primary-color);
      font-weight: bold;
    }

    .tab-content {
      display: none;
    }

    .tab-content.active {
      display: block;
    }
  </style>
</body>
</html>
