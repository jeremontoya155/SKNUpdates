        const itemCategoria = item.dataset.categoria;
        if (categoria === 'todos') {
          item.style.display = '';
        } else if (categoria === 'otros') {
          const esEquipo = ['PC de Escritorio', 'Notebooks', 'Celulares'].includes(itemCategoria);
          item.style.display = esEquipo ? 'none' : '';
        } else {
          item.style.display = itemCategoria === categoria ? '' : 'none';
        }
      });
    }

    // Filtrar por sucursal
