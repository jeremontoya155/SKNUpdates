<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Sistema de Inventario</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container">
    <div class="page-header">
      <h1>üè¢ <%= empresa.nombre %></h1>
      <div class="actions">
        <form action="/empresas/<%= empresa.id %>/toggle" method="POST" style="display: inline;">
          <button type="submit" class="btn <%= empresa.activo ? 'btn-warning' : 'btn-success' %>">
            <%= empresa.activo ? '‚ùå Desactivar' : '‚úÖ Activar' %>
          </button>
        </form>
        <a href="/empresas" class="btn btn-secondary">‚¨ÖÔ∏è Volver</a>
      </div>
    </div>

    <!-- Estad√≠sticas R√°pidas -->
    <div class="stats-grid">
      <a href="#usuarios-section" class="stat-card stat-blue" style="text-decoration: none; cursor: pointer;">
        <span class="stat-icon">üë•</span>
        <div class="stat-content">
          <h3>Usuarios</h3>
          <p class="stat-number"><%= stats.total_usuarios || 0 %></p>
          <p>Usuarios registrados</p>
        </div>
      </a>

      <a href="#tickets-section" class="stat-card stat-orange" style="text-decoration: none; cursor: pointer;">
        <span class="stat-icon">üé´</span>
        <div class="stat-content">
          <h3>Tickets</h3>
          <p class="stat-number"><%= stats.total_tickets || 0 %></p>
          <p><%= stats.tickets_pendientes || 0 %> pendientes</p>
        </div>
      </a>

      <a href="#inventario-section" class="stat-card stat-green" style="text-decoration: none; cursor: pointer;">
        <span class="stat-icon">üì¶</span>
        <div class="stat-content">
          <h3>Inventario</h3>
          <p class="stat-number"><%= stats.total_materiales || 0 %></p>
          <p>Materiales registrados</p>
        </div>
      </a>

      <a href="#sucursales-section" class="stat-card stat-primary" style="text-decoration: none; cursor: pointer;">
        <span class="stat-icon">üè™</span>
        <div class="stat-content">
          <h3>Sucursales</h3>
          <p class="stat-number"><%= stats.total_sucursales || 0 %></p>
          <p>Ubicaciones</p>
        </div>
      </a>

      <a href="#servidores-section" class="stat-card stat-blue" style="text-decoration: none; cursor: pointer;">
        <span class="stat-icon">üñ•Ô∏è</span>
        <div class="stat-content">
          <h3>Servidores</h3>
          <p class="stat-number"><%= stats.total_servidores || 0 %></p>
          <p>Servidores activos</p>
        </div>
      </a>

      <a href="#visitas-section" class="stat-card stat-success" style="text-decoration: none; cursor: pointer;">
        <span class="stat-icon">üìÖ</span>
        <div class="stat-content">
          <h3>Visitas</h3>
          <p class="stat-number"><%= stats.total_visitas || 0 %></p>
          <p>Visitas programadas</p>
        </div>
      </a>
    </div>

    <!-- Informaci√≥n de la Empresa -->
    <div class="detail-card">
      <div class="detail-header">
        <h2>üìã Informaci√≥n de la Empresa</h2>
        <span class="badge <%= empresa.activo ? 'badge-success' : 'badge-danger' %>">
          <%= empresa.activo ? '‚úÖ Activa' : '‚ùå Inactiva' %>
        </span>
      </div>

      <div class="detail-content">
        <div class="detail-row">
          <div class="detail-item">
            <label>üè¢ Nombre</label>
            <p><strong><%= empresa.nombre %></strong></p>
          </div>
          <div class="detail-item">
            <label>üÜî CUIT</label>
            <p><%= empresa.cuit || 'N/A' %></p>
          </div>
        </div>

        <div class="detail-row">
          <div class="detail-item">
            <label>üìß Email</label>
            <p><%= empresa.email || 'N/A' %></p>
          </div>
          <div class="detail-item">
            <label>üìû Tel√©fono</label>
            <p><%= empresa.telefono || 'N/A' %></p>
          </div>
        </div>

        <div class="detail-row">
          <div class="detail-item">
            <label>üåê Sitio Web</label>
            <p>
              <% if (empresa.sitio_web) { %>
                <a href="<%= empresa.sitio_web %>" target="_blank" rel="noopener"><%= empresa.sitio_web %></a>
              <% } else { %>
                N/A
              <% } %>
            </p>
          </div>
          <div class="detail-item">
            <label>üìÖ Fecha de Registro</label>
            <p><%= new Date(empresa.fecha_creacion).toLocaleDateString('es-AR') %></p>
          </div>
        </div>

        <h3 style="margin-top: 1.5rem; margin-bottom: 1rem; color: #333;">üìç Direcci√≥n Principal</h3>

        <div class="detail-row">
          <div class="detail-item">
            <label>Calle</label>
            <p><%= empresa.direccion || 'N/A' %></p>
          </div>
          <div class="detail-item">
            <label>Ciudad</label>
            <p><%= empresa.ciudad || 'N/A' %></p>
          </div>
        </div>

        <div class="detail-row">
          <div class="detail-item">
            <label>Provincia</label>
            <p><%= empresa.provincia || 'N/A' %></p>
          </div>
          <div class="detail-item">
            <label>C√≥digo Postal</label>
            <p><%= empresa.codigo_postal || 'N/A' %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Accesos R√°pidos -->
    <div class="quick-actions">
      <h2>‚ö° Accesos R√°pidos</h2>
      <div class="actions-grid">
        <% if (stats.total_tickets > 0) { %>
          <a href="/tickets?empresa_id=<%= empresa.id %>" class="action-card action-primary">
            <span class="action-icon">üé´</span>
            <span>Ver Todos los Tickets</span>
            <small><%= stats.total_tickets %> total</small>
          </a>
        <% } %>

        <% if (stats.total_materiales > 0) { %>
          <a href="/inventario?empresa_id=<%= empresa.id %>" class="action-card action-success">
            <span class="action-icon">üì¶</span>
            <span>Ver Inventario</span>
            <small><%= stats.total_materiales %> items</small>
          </a>
        <% } %>

        <% if (stats.total_servidores > 0) { %>
          <a href="/servidores?empresa_id=<%= empresa.id %>" class="action-card action-warning">
            <span class="action-icon">üñ•Ô∏è</span>
            <span>Ver Servidores</span>
            <small><%= stats.total_servidores %> activos</small>
          </a>
        <% } %>

        <% if (stats.total_visitas > 0) { %>
          <a href="/visitas?empresa_id=<%= empresa.id %>" class="action-card action-secondary">
            <span class="action-icon">üìÖ</span>
            <span>Ver Visitas</span>
            <small><%= stats.total_visitas %> programadas</small>
          </a>
        <% } %>
      </div>
    </div>

    <!-- Sucursales -->
    <div id="sucursales-section" class="detail-card" style="margin-top: var(--spacing-xl); scroll-margin-top: 80px;">
      <div class="detail-header">
        <h2>üè™ Sucursales (<%= sucursales.length %>)</h2>
        <button onclick="mostrarFormSucursal()" class="btn btn-primary">‚ûï Nueva Sucursal</button>
      </div>

      <!-- Formulario para crear sucursal (oculto por defecto) -->
      <div id="form-sucursal" style="display: none; padding: 1.5rem; background: #f8f9fa; border-top: 1px solid #dee2e6; margin-top: 1rem;">
        <h3 style="margin-bottom: 1rem;">‚ûï Nueva Sucursal</h3>
        <form action="/empresas/<%= empresa.id %>/sucursales" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label for="nombre">Nombre de Sucursal *</label>
              <input type="text" id="nombre" name="nombre" required placeholder="Ej: Sucursal Centro, Casa Central">
            </div>
            <div class="form-group">
              <label for="codigo">C√≥digo</label>
              <input type="text" id="codigo" name="codigo" placeholder="SUC-001, CENTRAL">
            </div>
          </div>

          <div class="form-group">
            <label for="direccion">Direcci√≥n *</label>
            <input type="text" id="direccion" name="direccion" required placeholder="Calle 123">
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="ciudad">Ciudad *</label>
              <input type="text" id="ciudad" name="ciudad" required>
            </div>
            <div class="form-group">
              <label for="provincia">Provincia *</label>
              <input type="text" id="provincia" name="provincia" required>
            </div>
            <div class="form-group">
              <label for="codigo_postal">C.P.</label>
              <input type="text" id="codigo_postal" name="codigo_postal">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="telefono">Tel√©fono</label>
              <input type="text" id="telefono" name="telefono">
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email">
            </div>
          </div>

          <div class="form-group">
            <label style="display: flex; align-items: center; gap: 0.5rem;">
              <input type="checkbox" name="es_principal"> Marcar como sucursal principal
            </label>
          </div>

          <div class="form-group">
            <label for="observaciones">Observaciones</label>
            <textarea id="observaciones" name="observaciones" rows="2"></textarea>
          </div>

          <div class="form-actions" style="display: flex; gap: 1rem; margin-top: 1rem;">
            <button type="submit" class="btn btn-primary">üíæ Guardar Sucursal</button>
            <button type="button" onclick="ocultarFormSucursal()" class="btn btn-secondary">Cancelar</button>
          </div>
        </form>
      </div>

      <!-- Lista de sucursales -->
      <div class="detail-content">
        <% if (sucursales.length === 0) { %>
          <p style="text-align: center; padding: 2rem; color: #666;">
            üì≠ No hay sucursales registradas
          </p>
        <% } else { %>
          <% sucursales.forEach(sucursal => { %>
            <div class="sucursal-item" style="border: 1px solid #dee2e6; padding: 1rem; margin-bottom: 1rem; border-radius: 8px; background: <%= sucursal.es_principal ? '#e8f5e9' : 'white' %>;">
              <div style="display: flex; justify-content: space-between; align-items: start;">
                <div style="flex: 1;">
                  <h4 style="margin: 0 0 0.5rem 0;">
                    <%= sucursal.nombre %>
                    <% if (sucursal.codigo) { %>
                      <span class="badge badge-secondary"><%= sucursal.codigo %></span>
                    <% } %>
                    <% if (sucursal.es_principal) { %>
                      <span class="badge badge-success">‚≠ê Principal</span>
                    <% } %>
                  </h4>
                  <p style="margin: 0.25rem 0; color: #666;">
                    <strong>üìç</strong> <%= sucursal.direccion %>, <%= sucursal.ciudad %>, <%= sucursal.provincia %>
                    <% if (sucursal.codigo_postal) { %>
                      (<%= sucursal.codigo_postal %>)
                    <% } %>
                  </p>
                  <% if (sucursal.telefono) { %>
                    <p style="margin: 0.25rem 0; color: #666;"><strong>üìû</strong> <%= sucursal.telefono %></p>
                  <% } %>
                  <% if (sucursal.email) { %>
                    <p style="margin: 0.25rem 0; color: #666;"><strong>üìß</strong> <%= sucursal.email %></p>
                  <% } %>
                  <% if (sucursal.observaciones) { %>
                    <p style="margin: 0.5rem 0; color: #888; font-style: italic;"><%= sucursal.observaciones %></p>
                  <% } %>
                </div>
                <div>
                  <form action="/empresas/<%= empresa.id %>/sucursales/<%= sucursal.id %>/eliminar" method="POST" style="display: inline;" onsubmit="return confirm('¬øDesactivar esta sucursal?')">
                    <button type="submit" class="btn-small btn-danger" style="padding: 0.5rem 1rem; font-size: 0.875rem;">üóëÔ∏è Eliminar</button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>

    <!-- Estad√≠sticas -->
    <div class="stats-grid" style="margin-top: 2rem;">
      <div class="stat-card">
        <span class="stat-value"><%= sucursales.length %></span>
        <span class="stat-label">üè™ Sucursales</span>
      </div>
      <div class="stat-card">
        <span class="stat-value"><%= stats.total_usuarios %></span>
        <span class="stat-label">üë• Usuarios</span>
      </div>
      <div class="stat-card">
        <span class="stat-value"><%= stats.total_materiales %></span>
        <span class="stat-label">üì¶ Materiales</span>
      </div>
      <div class="stat-card">
        <span class="stat-value"><%= stats.total_tickets %></span>
        <span class="stat-label">üé´ Tickets</span>
        <% if (stats.tickets_pendientes > 0) { %>
          <small style="color: var(--danger-color);"><%= stats.tickets_pendientes %> pendientes</small>
        <% } %>
      </div>
      <div class="stat-card">
        <span class="stat-value"><%= stats.total_servidores %></span>
        <span class="stat-label">üñß Servidores</span>
      </div>
      <div class="stat-card">
        <span class="stat-value"><%= impresoras.length %></span>
        <span class="stat-label">üñ®Ô∏è Impresoras</span>
      </div>
      <div class="stat-card">
        <span class="stat-value"><%= stats.total_visitas %></span>
        <span class="stat-label">üöó Visitas</span>
      </div>
    </div>

    <!-- Usuarios -->
    <div id="usuarios-section" class="detail-card" style="margin-top: var(--spacing-xl); scroll-margin-top: 80px;">
      <div class="detail-header">
        <h2>üë• Usuarios (<%= usuarios.length %>)</h2>
      </div>
      <div class="detail-content">
        <% if (usuarios.length === 0) { %>
          <div class="empty-state">
            <p>üë§ No hay usuarios registrados</p>
          </div>
        <% } else { %>
          <div class="table-container">
            <table>
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Email</th>
                  <th>Rol</th>
                  <th>Estado</th>
                </tr>
              </thead>
              <tbody>
                <% usuarios.forEach(u => { %>
                  <tr>
                    <td><strong><%= u.nombre %></strong></td>
                    <td><%= u.email %></td>
                    <td><span class="badge badge-primary"><%= u.rol %></span></td>
                    <td>
                      <span class="badge <%= u.activo ? 'badge-success' : 'badge-danger' %>">
                        <%= u.activo ? '‚úÖ Activo' : '‚ùå Inactivo' %>
                      </span>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Tickets -->
    <div id="tickets-section" class="detail-card" style="margin-top: var(--spacing-xl); scroll-margin-top: 80px;">
      <div class="detail-header">
        <h2>üé´ Tickets Recientes</h2>
        <% if (stats.total_tickets > 10) { %>
          <a href="/tickets?empresa_id=<%= empresa.id %>" class="btn btn-primary">Ver Todos (<%= stats.total_tickets %>) ‚Üí</a>
        <% } %>
      </div>
      <div class="detail-content">
        <% if (tickets.length === 0) { %>
          <div class="empty-state">
            <p>üé´ No hay tickets registrados</p>
          </div>
        <% } else { %>
          <div class="table-container">
            <table>
              <thead>
                <tr>
                  <th>#</th>
                  <th>T√≠tulo</th>
                  <th>Solicitante</th>
                  <th>Estado</th>
                  <th>Fecha</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% tickets.slice(0, 20).forEach(t => { %>
                  <tr>
                    <td><strong>#<%= t.id %></strong></td>
                    <td><%= t.titulo %></td>
                    <td><%= t.solicitante_nombre %></td>
                    <td>
                      <% 
                        let badge = 'badge';
                        if (t.estado === 'abierto') badge = 'badge-warning';
                        else if (t.estado === 'en_proceso') badge = 'badge-primary';
                        else if (t.estado === 'cerrado') badge = 'badge-success';
                      %>
                      <span class="badge <%= badge %>"><%= t.estado %></span>
                    </td>
                    <td><%= new Date(t.fecha_creacion).toLocaleDateString('es-AR') %></td>
                    <td>
                      <a href="/tickets/<%= t.id %>" class="btn-small">Ver</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Inventario / Equipos -->
    <div id="inventario-section" class="detail-card" style="margin-top: var(--spacing-xl); scroll-margin-top: 80px;">
      <div class="detail-header">
        <h2>üì¶ Inventario y Equipos (<%= materiales.length %>)</h2>
        <% if (stats.total_materiales > 10) { %>
          <a href="/inventario?empresa_id=<%= empresa.id %>" class="btn btn-primary">Ver Todo (<%= stats.total_materiales %>) ‚Üí</a>
        <% } %>
      </div>

      <!-- Filtros r√°pidos -->
      <div style="padding: var(--spacing-md); border-bottom: 1px solid var(--border-color);">
        <div style="display: flex; gap: var(--spacing-sm); flex-wrap: wrap; align-items: center;">
          <span style="font-weight: 600; color: var(--text-secondary);">Filtrar por:</span>
          <button onclick="filtrarInventario('todos')" class="btn-filter active" data-filter="todos">
            üì¶ Todos (<%= materiales.length %>)
          </button>
          <% 
            const pcs = materiales.filter(m => m.categoria_nombre === 'PC de Escritorio');
            const notebooks = materiales.filter(m => m.categoria_nombre === 'Notebooks');
            const celulares = materiales.filter(m => m.categoria_nombre === 'Celulares');
            const otros = materiales.filter(m => !['PC de Escritorio', 'Notebooks', 'Celulares'].includes(m.categoria_nombre));
          %>
          <% if (pcs.length > 0) { %>
            <button onclick="filtrarInventario('PC de Escritorio')" class="btn-filter" data-filter="PC de Escritorio">
              üñ•Ô∏è PCs (<%= pcs.length %>)
            </button>
          <% } %>
          <% if (notebooks.length > 0) { %>
            <button onclick="filtrarInventario('Notebooks')" class="btn-filter" data-filter="Notebooks">
              üíª Notebooks (<%= notebooks.length %>)
            </button>
          <% } %>
          <% if (celulares.length > 0) { %>
            <button onclick="filtrarInventario('Celulares')" class="btn-filter" data-filter="Celulares">
              üì± Celulares (<%= celulares.length %>)
            </button>
          <% } %>
          <% if (otros.length > 0) { %>
            <button onclick="filtrarInventario('otros')" class="btn-filter" data-filter="otros">
              üìã Otros (<%= otros.length %>)
            </button>
          <% } %>
        </div>

        <!-- Filtro por sucursal -->
        <% if (sucursales && sucursales.length > 1) { %>
          <div style="margin-top: var(--spacing-sm);">
            <select id="filtroSucursal" onchange="filtrarPorSucursal(this.value)" style="padding: 8px 12px; border-radius: 6px; border: 1px solid var(--border-color);">
              <option value="todas">üè™ Todas las sucursales</option>
              <% sucursales.forEach(suc => { %>
                <option value="<%= suc.id %>"><%= suc.nombre %></option>
              <% }) %>
            </select>
          </div>
        <% } %>
      </div>

      <div class="detail-content">
        <% if (materiales.length === 0) { %>
          <div class="empty-state">
            <p>üì¶ No hay materiales en inventario</p>
          </div>
        <% } else { %>
          <div class="table-container">
            <table id="tabla-inventario">
              <thead>
                <tr>
                  <th>Tipo</th>
                  <th>Equipo/Material</th>
                  <th>Marca/Modelo</th>
                  <th>Sucursal</th>
                  <th>Stock</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% materiales.forEach(m => { %>
                  <tr class="item-inventario" 
                      data-categoria="<%= m.categoria_nombre %>" 
                      data-sucursal="<%= m.sucursal_id || '' %>"
                      <%= m.stock_actual < m.stock_minimo ? 'style="background: #fff3e0;"' : '' %>>
                    <td>
                      <span class="badge badge-info"><%= m.categoria_nombre || 'N/A' %></span>
                    </td>
                    <td><strong><%= m.nombre %></strong></td>
                    <td>
                      <% if (m.marca || m.modelo) { %>
                        <%= m.marca || '' %> <%= m.modelo || '' %>
                      <% } else { %>
                        <span style="color: var(--text-secondary);">-</span>
                      <% } %>
                    </td>
                    <td><%= m.sucursal_nombre || 'Sin asignar' %></td>
                    <td>
                      <% if (m.stock_actual < m.stock_minimo) { %>
                        <span class="badge badge-danger"><%= m.stock_actual %></span>
                      <% } else if (m.stock_actual === 0) { %>
                        <span class="badge badge-secondary">0</span>
                      <% } else { %>
                        <span class="badge badge-success"><%= m.stock_actual %></span>
                      <% } %>
                    </td>
                    <td>
                      <a href="/inventario/<%= m.id %>" class="btn-small">Ver</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Servidores -->
    <div id="servidores-section" class="detail-card" style="margin-top: var(--spacing-xl); scroll-margin-top: 80px;">
      <div class="detail-header">
        <h2>üñ•Ô∏è Servidores (<%= servidores.length %>)</h2>
      </div>
      <div class="detail-content">
        <% if (servidores.length === 0) { %>
          <div class="empty-state">
            <p>üñ•Ô∏è No hay servidores registrados</p>
          </div>
        <% } else { %>
          <div class="table-container">
            <table>
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>IP</th>
                  <th>SO</th>
                  <th>Estado</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% servidores.forEach(s => { %>
                  <tr>
