<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Sistema de Inventario</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container">
    <% if (message) { %>
      <div class="alert alert-success"><%= message %></div>
    <% } %>
    
    <% if (error) { %>
      <div class="alert alert-error"><%= error %></div>
    <% } %>

    <div class="page-header">
      <h1>Registro de Visitas</h1>
      <a href="/visitas/nuevo" class="btn btn-primary">+ Nueva Visita</a>
    </div>

    <!-- Filtros de bÃºsqueda -->
    <div class="search-filters">
      <form method="GET" action="/visitas" class="search-form">
        <div class="form-row">
          <div class="form-group">
            <input type="text" name="buscar" placeholder="ğŸ” Buscar por visitante o empresa..." 
                   value="<%= filtros?.buscar || '' %>" class="search-input">
          </div>

          <div class="form-group">
            <select name="estado" class="filter-select">
              <option value="">ğŸ“‹ Todos los estados</option>
              <option value="pendiente" <%= filtros?.estado === 'pendiente' ? 'selected' : '' %>>â³ Pendiente</option>
              <option value="en_curso" <%= filtros?.estado === 'en_curso' ? 'selected' : '' %>>ğŸ”„ En Curso</option>
              <option value="finalizada" <%= filtros?.estado === 'finalizada' ? 'selected' : '' %>>âœ… Finalizada</option>
              <option value="cancelada" <%= filtros?.estado === 'cancelada' ? 'selected' : '' %>>âŒ Cancelada</option>
            </select>
          </div>

          <div class="form-group">
            <input type="date" name="fecha_desde" placeholder="Desde" 
                   value="<%= filtros?.fecha_desde || '' %>" class="filter-input">
          </div>

          <div class="form-group">
            <input type="date" name="fecha_hasta" placeholder="Hasta" 
                   value="<%= filtros?.fecha_hasta || '' %>" class="filter-input">
          </div>

          <button type="submit" class="btn btn-primary">ğŸ” Buscar</button>
          <a href="/visitas" class="btn btn-secondary">ğŸ”„ Limpiar</a>
        </div>
      </form>
    </div>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Visitante</th>
          <th>Empresa</th>
          <th>Visitado</th>
          <th>Motivo</th>
          <th>Fecha Visita</th>
          <th>Estado</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% visitas.forEach(visita => { %>
          <tr>
            <td>#<%= visita.id %></td>
            <td><%= visita.visitante_nombre %></td>
            <td><%= visita.visitante_empresa || '-' %></td>
            <td><%= visita.visitado_nombre %></td>
            <td><%= visita.motivo_visita.substring(0, 50) %>...</td>
            <td><%= new Date(visita.fecha_visita).toLocaleString('es-ES') %></td>
            <td><span class="badge badge-<%= visita.estado %>"><%= visita.estado %></span></td>
            <td>
              <a href="/visitas/<%= visita.id %>" class="btn-small">Ver Detalle</a>
            </td>
          </tr>
        <% }) %>

        <% if (visitas.length === 0) { %>
          <tr>
            <td colspan="8" style="text-align: center;">No hay visitas registradas</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
