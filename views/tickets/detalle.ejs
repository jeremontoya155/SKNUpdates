<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Sistema de Inventario</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container">
    <% if (message) { %>
      <div class="alert alert-success"><%= message %></div>
    <% } %>
    
    <% if (error) { %>
      <div class="alert alert-error"><%= error %></div>
    <% } %>

    <h1>Ticket #<%= ticket.id %></h1>

    <div class="detail-card">
      <h2><%= ticket.titulo %></h2>
      <p><strong>Estado:</strong> <span class="badge badge-<%= ticket.estado %>"><%= ticket.estado %></span></p>
      <p><strong>Prioridad:</strong> <span class="badge badge-prioridad-<%= ticket.prioridad %>"><%= ticket.prioridad %></span></p>
      <p><strong>Solicitante:</strong> <%= ticket.solicitante_nombre %></p>
      <p><strong>Asignado a:</strong> <%= ticket.asignado_nombre || 'Sin asignar' %></p>
      <p><strong>Fecha Creación:</strong> <%= new Date(ticket.fecha_creacion).toLocaleString('es-ES') %></p>
      <% if (ticket.fecha_cierre) { %>
        <p><strong>Fecha Cierre:</strong> <%= new Date(ticket.fecha_cierre).toLocaleString('es-ES') %></p>
      <% } %>
      <p><strong>Descripción:</strong></p>
      <p><%= ticket.descripcion %></p>
    </div>

    <% if (user.rol === 'admin' || user.rol === 'superadmin') { %>
      <div class="actions-section">
        <h3>Acciones</h3>
        
        <form action="/tickets/<%= ticket.id %>/estado" method="POST" class="inline-form">
          <label>Cambiar Estado:</label>
          <select name="estado" onchange="this.form.submit()">
            <option value="abierto" <%= ticket.estado === 'abierto' ? 'selected' : '' %>>Abierto</option>
            <option value="en_proceso" <%= ticket.estado === 'en_proceso' ? 'selected' : '' %>>En Proceso</option>
            <option value="cerrado" <%= ticket.estado === 'cerrado' ? 'selected' : '' %>>Cerrado</option>
            <option value="cancelado" <%= ticket.estado === 'cancelado' ? 'selected' : '' %>>Cancelado</option>
          </select>
        </form>

        <form action="/tickets/<%= ticket.id %>/asignar" method="POST" class="inline-form">
          <label>Asignar a:</label>
          <select name="usuario_asignado">
            <option value="">Sin asignar</option>
            <% usuarios.forEach(u => { %>
              <option value="<%= u.id %>" <%= ticket.usuario_asignado == u.id ? 'selected' : '' %>><%= u.nombre %></option>
            <% }) %>
          </select>
          <button type="submit" class="btn-small btn-primary">Asignar</button>
        </form>
      </div>
    <% } %>

    <div class="comentarios-section">
      <h3>Comentarios</h3>
      
      <div class="comentarios-lista">
        <% comentarios.forEach(com => { %>
          <div class="comentario">
            <p><strong><%= com.usuario_nombre %></strong> - <%= new Date(com.fecha_comentario).toLocaleString('es-ES') %></p>
            <p><%= com.comentario %></p>
          </div>
        <% }) %>
      </div>

      <form action="/tickets/<%= ticket.id %>/comentario" method="POST" class="form">
        <div class="form-group">
          <label for="comentario">Agregar Comentario</label>
          <textarea id="comentario" name="comentario" rows="3" required></textarea>
          <input type="hidden" name="ticket_id" value="<%= ticket.id %>">
        </div>
        <button type="submit" class="btn btn-primary">Agregar Comentario</button>
      </form>
    </div>

    <div class="form-actions">
      <a href="/tickets" class="btn btn-secondary">Volver a Tickets</a>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
